<main role="main" class="container">
<% title @recipe.drinkName%>
<h1>Edit Drink Recipe for <%= @recipe.drinkName %> </h1>

<%= render 'form', recipe: @recipe %>

<p><strong><u>Ingredients</u></strong></p>   
    <% @recipe.ingredients.each do |ingredient| %>
        <p>
            <%= ingredient.amount %> 
            <%= ingredient.measurement%> 
            <%= ingredient.ingredientName %> 
            <%= link_to 'Edit', edit_ingredient_path(ingredient), class:"btn btn-primary btn-sm" %>
            <%= link_to 'Delete', ingredient_path(ingredient), method: :delete, data: { confirm: 'Are you sure you want to delete '+ingredient.ingredientName+'?' }, class:"btn btn-danger btn-sm" %>
        </p>
    <% end %> 

<p><%= link_to 'Add ingredient', new_ingredient_path(@recipe), class:"btn btn-primary btn-sm" %></p>
<p><%= link_to 'Back', recipe_path(@recipe), class:"btn btn-primary btn-sm" %></p>


</main><!-- /.container -->