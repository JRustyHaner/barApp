<main role="main" class="container">
<% title @recipe.drinkName%>
<h1>Edit Drink Recipe for <%= @recipe.drinkName %> </h1>

<%= render 'form', recipe: @recipe %>

<p><h3>Ingredients</h3></p>   
  <div class="row">
            <div class="col-md-2 col-thead">Amount</div>
            <div class="col-md-6 col-thead">Ingredient</div>
            <div class="col-md-4 col-thead">Action</div>
        </div>
    <% @recipe.ingredients.each do |ingredient| %>
      
        <div class="row row-large">
            <div class="col-md-2"><%= ingredient.amount %> <%= ingredient.measurement %> </div>
            <div class="col-md-6"><%= ingredient.ingredientName %></div>
            <div class="col-md-4"><%= link_to 'Edit', edit_ingredient_path(ingredient), class:"btn btn-primary" %>
            <%= link_to 'Delete', ingredient_path(ingredient), method: :delete, data: { confirm: 'Are you sure you want to delete '+ingredient.ingredientName+'?' }, class:"btn btn-danger" %>
            </div>
        </div>
        
    <% end %> 

<p><%= link_to 'Add ingredient', new_ingredient_path(@recipe),class:"btn btn-primary" %></p>


</main><!-- /.container -->