<main role="main" class="container">
    <h1>Drink Comment</h1>

    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">likeStatus</th>
                <th scope="col">comment</th>
                <th scope="col">reviewDate</th>  
                <th scope="col"></th>          
            </tr>
        </thead>
        <tbody>
            <% @drink_comments.each do |question| %>
                <tr>
                    <td> <%= question.likeStatus %></td>
                    <td> <%= question.comment %></td>
                    <td> <%= question.reviewDate %></td>

                </tr>
            <% end %>
        </tbody>
    </table>

</main><!-- /.container -->