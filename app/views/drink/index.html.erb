<main role="main" class="container">

<h1>drinks</h1>

<table>
  <thead>
    <tr>
      <th>Drink Name</th>
      <th>Country</th>
      <th>Special Date</th>
      <th>Date Posted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drinks.each do |drink| %>
      <tr>
        <td><%= drink.drinkName %></td>
        <td><%= drink.drinkLocation %></td>
        <td><%= drink.specialDate %></td>
        <td><%= drink.drinkDate %></td>
        <td><%= link_to 'Show', drink %></td>
        <td><%= link_to 'Edit', edit_drink_path(drink) %></td>
        <td><%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New drink', new_drink_path %></p>
<p><%= link_to 'Home', home_path %></p>

</main><!-- /.container -->