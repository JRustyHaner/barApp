<%= form_with model: drink_comment, local: true do |form| %>
  <%= hidden_field_tag :recipe_id, recipe_id  %>

  <div class="field">
    <%= form.label "Please comment on the Drink Recipe." %>
    <%= form.text_field :comment , class:'form-control' %>
  </div>

  <div class="field">
    <%= form.label "Do you like the Drink Recipe?" %>
    <%= form.text_field :likeStatus , class:'form-control' %>
  </div>

  <div class="field">
    <%= form.label "Date" %>
    <%= form.date_field :reviewDate , class:"form-control form-control-sm" %>
  </div>
   
  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-success"%>
  </div>
<% end %>